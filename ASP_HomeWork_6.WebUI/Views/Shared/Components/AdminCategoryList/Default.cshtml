@model AdminCategoryListViewModel
<section class="list-group">


    @{

        var css2 = "list-group-item";
        @if (0 == Model.CurrentCategory)
        {
            css2 += " active";
        }
    }

    <a href="/product/index?category=0" style="cursor:pointer;"
       class="@css2">All Category</a>
    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item";
        @if (item.CategoryId == Model.CurrentCategory)
        {
            css += " active";
        }
        <div style="display: flex; height: 35px; gap: 10px;"> 

            <a style="cursor:pointer;"
               class="@css">
                @item.CategoryName
            </a>

            <a href="/Admin/DeleteCategory?id=@item.CategoryId" style="background: red; color: white; border-radius: 10px; width: 20px; height: 20px; padding: 0; text-align: center"
               class="@css">
               X
            </a>

        </div>
    }

  

    <form asp-controller="Admin" asp-action="AddCategory" method="get">
        
            <input asp-for="Name" >
            <button type="submit" class="btn btn-primary">Add</button>
        
    </form>


</section>